{{> layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header mb-0">
            <h4><b>유료 게시글 구매 내역</b></h4>
        </div>

        <!--  외부 카드  -->
        <div class="card-body">

            <!--   내부 카드 (card-body)  -->
            {{#paymentList}}
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-2">
                                    결제 #{{id}}
                                </h5>
                                <p class="text-muted mb-2">
                                    <i class="fas  fa-receipt"></i>주문번호: {{merchantUid}}
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="fas  fa-key"></i>결제번호: {{impUid}}
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="fas  fa-calendar"></i>결제일: {{paidAt}}
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="fas  fa-circle-info"></i>결제상태:
                                    <span class="badge bg-success">{{status}}</span>

                                </p>
                            </div>

                            <div class="text-end">
                                <span class="badge bg-primary fs-6">+{{amount}}P</span>
                                {{#isRefundable}}
                                    <a href="/refund/request/1" class="btn btn-outline-danger btn-sm">환불하기</a>
                                {{/isRefundable}}
                            </div>


                        </div>
                    </div>
                </div>
            {{/paymentList}}

            <div class="mt-4">
                <a href="/user/detail" class="btn btn-secondary">회원정보로 돌아가기</a>
            </div>
        </div>
    </div>
</div>
</div>


{{> layout/footer}}
